# Ignore node_modules and dependencies
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Ignore source files since we only need the built dist/ folder
src/
public/

# Ignore development configuration files
vite.config.js
eslint.config.js
.eslintrc*
.prettierrc*
tsconfig.json
jsconfig.json

# Ignore original package files (use package.json.app-engine for deployment)
package.json
package-lock.json
yarn.lock
package.json.deploy
package.json.original
package.json.app-engine

# Ignore Git repository
.git/
.gitignore

# Ignore IDE and editor files
.vscode/
.idea/
*.swp
*.swo
*~

# Ignore logs and temporary files
*.log
tmp/
temp/

# Ignore OS generated files
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db

# Ignore documentation
README.md
docs/

# Ignore any test files
test/
tests/
__tests__/
*.test.js
*.spec.js

# Allow Node.js files needed for App Engine
!server.js
!package.json.app-engine

# Explicitly include the dist directory
!dist/
!dist/assets/
!dist/index.html 